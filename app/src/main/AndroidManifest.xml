<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mvvm.steelkiwi.com.moviefinder">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="mvvm.steelkiwi.com.moviefinder.MovieFinderApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="mvvm.steelkiwi.com.moviefinder.ui.main.MainActivity" />
        <activity android:name="mvvm.steelkiwi.com.moviefinder.ui.movie_details.MovieDetailsActivity" />
        <activity android:name="mvvm.steelkiwi.com.moviefinder.ui.splash.StartActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>